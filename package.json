{
	"name": "mamd",
	"type": "module",
	"private": true,
	"packageManager": "bun@1.1.33",
	"engines": {
		"bun": ">=1.1.33",
		"node": ">=20"
	},
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"build": "turbo build",
		"dev:setup": "dotenv -e .env -- docker compose -f ./docker-compose.dev.yml up -d",
		"dev": "dotenv -e .env -- turbo dev --env-mode loose",
		"lint-staged": "lint-staged",
		"lint": "turbo lint",
		"postinstall": "dotenv -e .env -- turbo postinstall",
		"prepare": "husky",
		"prisma:migrate": "dotenv -e .env -- turbo migrate --env-mode loose",
		"prisma:reset": "dotenv -e .env -- turbo reset --env-mode loose -- --force",
		"prisma:studio": "dotenv -e .env -- turbo studio --env-mode loose"
	},
	"dependencies": {
		"@antfu/eslint-config": "^3.7.3",
		"@types/lodash-es": "^4.17.12",
		"dotenv-cli": "^7.4.2",
		"eslint": "9.12.0",
		"eslint-plugin-format": "^0.1.1",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"lodash-es": "^4.17.21",
		"npm-run-all2": "^7.0.1",
		"pm2": "^5.4.2",
		"rxjs": "^7.8.1",
		"turbo": "latest"
	}
}
