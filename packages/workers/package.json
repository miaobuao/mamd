{
	"name": "@repo/workers",
	"type": "module",
	"main": "./index.ts",
	"scripts": {
		"build:multi": "bun build ./modules/main.multi.ts --target node --outdir=dist",
		"build:single": "bun build ./modules/main.single.ts --target node --outdir=dist",
		"dev:deploy": "pm2 start ./ecosystem.config.cjs",
		"dev:build:multi": "bun build ./modules/main.multi.ts --target node --outdir=dist --watch",
		"dev:build:single": "bun build ./modules/main.single.ts --target node --outdir=dist --watch",
		"dev": "run-p dev:build:* dev:deploy",
		"postinstall": "run-p build:*",
		"clean": "rimraf node_modules"
	},
	"devDependencies": {
		"@types/mime-types": "^2.1.4",
		"chokidar": "^4.0.1",
		"drizzle-client": "workspace:*",
		"drizzle-orm": "^0.39.1",
		"file-type": "^19.6.0",
		"isbinaryfile": "^5.0.4",
		"junk": "^4.0.1",
		"mime-types": "^2.1.35",
		"nats": "^2.28.2",
		"rxjs": "^7.8.1"
	}
}
